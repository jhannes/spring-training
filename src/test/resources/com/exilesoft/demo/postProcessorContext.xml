<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.exilesoft.demo.Application">
		<property name="applicationInfo" ref="applicationInfo" />
	</bean>

	<bean id="applicationInfo" class="com.exilesoft.demo.ApplicationInfoImpl">
		<constructor-arg value="public" />
		<constructor-arg value="secret" />
	</bean>
	
    <bean class="com.exilesoft.demo.security.SecurityProxyPostProcessor"/>

</beans>